@model CreateUserRequest
@{
    ViewBag.Title = "User";
    Layout = null;
}

<head>
    <meta charset="utf-8">
    <title>Вход</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/tooplate-style.css"/> 
   <link rel="stylesheet" href="~/css/reg-style.css"/> 
</head>


<div class="container-fluid">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                        <h3 class="text-info">Зарегистрироваться</h3>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m=>m.Name,"Имя",new{@class = "text-info"})@*Название формы*@
                            @Html.TextBoxFor(m=>m.Name ,new{@class = "form-control"})@*Текстовая форма*@
                            @Html.ValidationMessageFor(m=>m.Name,"",new{@class = "text-danger"})@*Сообщение об ошибке*@
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m=>m.Email ,new{@class = "text-info"})
                            @Html.TextBoxFor(m=>m.Email ,new{@class = "form-control"})
                            @Html.ValidationMessageFor(m=>m.Email,"",new{@class = "text-danger"})
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m=>m.Password,"Пароль" ,new{@class = "text-info"})
                            @Html.TextBoxFor(m=>m.Password ,new{@class = "form-control"})
                            @Html.ValidationMessageFor(m=>m.Password,"",new{@class = "text-danger"})
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m=>m.Role,"Роль" ,new{@class = "text-info"}) 
                            <select class = "form-control" style="text-align: center;" name="Role" >
                                <option value="User">User</option>
                                <option value="Moderator">Moderator</option>
                                <option value="Admin">Admin</option>
                            </select>
                            @Html.ValidationMessageFor(m=>m.Role,"",new{@class = "text-danger"}) 
                        </div>
                       <div class="form-group">
                           
                              <input type="submit" value="Создавать" class="btn btn-outline-success float-right" />
                              <a class="btn btn-outline-secondary" asp-action="Login">Авторизоваться</a>
                          
                       </div>
                    }
</div>






