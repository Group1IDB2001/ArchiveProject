
@model CreateUserRequest
@{
    ViewBag.Title = "User";
    Layout = null;
}

<head>
    <meta charset="utf-8">
    <title>Вход</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/tooplate-style.css"/> 
   <link rel="stylesheet" href="~/css/login-style.css"/> 
    
</head>

<body>

<div class="container-fluid">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                        <h3 class="text-center text-info">Авторизоваться</h3>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m=>m.Email ,new{@class = "text-info"})
                            @Html.TextBoxFor(m=>m.Email ,new{@class = "form-control"})
                            @Html.ValidationMessageFor(m=>m.Email,"",new{@class = "text-danger"})
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m=>m.Password,"Пароль" ,new{@class = "text-info"})
                            @Html.PasswordFor(m=>m.Password ,new{@class = "form-control"})
                            @Html.ValidationMessageFor(m=>m.Password,"",new{@class = "text-danger"})

                        </div>
                        <div class="form-group">
                            <input type="submit" name="submit" class="btn btn-info btn-md" value="Login" />
                        </div>
                        <div class="form-group">
                            <a class="Register" href="/Users/Register">У вас нет аккаунта? Зарегестрируйтесь<br></a>
                        </div>
                    }
               
</div>

</body>





