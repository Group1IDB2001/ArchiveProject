@{
    ViewData["Title"] = "List of Qestions";
    Pager pager = new Pager();
    int pageNo = 0;
    if(ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}
<html lang="ru" dir="ltr">
<head>
    <meta charset="utf-8">
    <title>Авторы</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
     <link rel="stylesheet" href="~/css/tooplate-style.css"/> 
</head>

<header>
    <h2 class="tm-main-title">Вопросы</h2>
</header>

<div class="tm-gallery">
    <div class="row">
    @foreach(var qestion in Model)
    {
        
        
            <figure class="col-lg-10 col-md-2 col-sm-3 col-6 tm-gallery-item">
                  <a asp-area="" asp-controller="Collections" asp-action="CollectionDetails" asp-route-id=@qestion.Id>
                        

                        <p class="tm-figcaption">@qestion.Name</p>
                  </a>
            </figure>
        

    }
    </div>
</div>

<div class ="container">
    @if(pager.TotalPages > 0)
    {
        <ul class ="pagination justify-content-end">
      
            @for (var pag = pager.StartPage; pag <= pager.EndPage; pag++)
            {
                <li class ="page-item @(pag == pager.CurrentPage ? "active":"")">
                    <a class ="page-link" asp-controller="Items" asp-action="Index" asp-route-pg="@pag"> @pag </a>
                </li>
            }
            @if(pager.CurrentPage < pager.TotalPages)
            {
                <li class="page-item">
                    <a class ="page-link" asp-controller="Items" asp-action="Index" asp-route-pg="@(pager.CurrentPage+1)">Следующий</a>
                </li>
                <li>
                     <a class ="page-link" asp-controller="Items" asp-action="Index" asp-route-pg=@(pager.CurrentPage -1)>Предыдущий</a>
                </li>
            }
        </ul>
    }
       <a asp-controller="Items" asp-action="Create" class="btn btn-success" ><i class="bi bi-plus-circle"></i>Добавить коллекцию</a>
</div>