@model Author
@{
    ViewData["Title"] = "Add a new Author";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
             <h1>Add a new Author</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <from asp-action ="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="form-group">
                            <label asp-for="Name" class="control-lable"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Born" class="control-lable"></label>
                            <input asp-for="Born" class="form-control" />
                            <span asp-validation-for="Born" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Death" class="control-lable"></label>
                            <input asp-for="Death" class="form-control" />
                            <span asp-validation-for="Death" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                             <label asp-for="About" class="control-lable"></label>
                             <input asp-for="About" class="form-control" />
                             <span asp-validation-for="About" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                             <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                             <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                        </div>

                </from>
            </div>
        </div>
    </div>
</div>