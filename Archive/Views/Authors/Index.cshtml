@{

    ViewData["Title"] = "List of Authors";
    Pager pager = new Pager();
    int pageNo = 0;
    if(ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

<h1>Authors</h1>
<table class="table">
    <tr>
        <th>
            Author ID
        </th>
        <th>
            Name Author
        </th>
        <th>
            Born Author
        </th>
        <th>
            Death Author
        </th>
        <th class="text-center">
            About Author
        </th>

    </tr>
    @foreach(var author in Model)
    {
        <tr>
            <td>@author.Id</td>
            <td>@author.Name</td>
            <td>@author.Born</td>
            <td>@author.Death</td>
            <td>@author.About</td>

            <td class="aling-middle">
            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a>
            <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details</a>
            <a class="btn btn-danger"><i class="bi bi-trash"></i>Delete</a>
            </td>
        </tr>
        
    }
</table>


<div class ="container">
    @if(pager.TotalPages > 0)
    {
        <ul class ="pagination justify-content-end">
      
            @for (var pag = pager.StartPage; pag <= pager.EndPage; pag++)
            {
                <li class ="page-item @(pag == pager.CurrentPage ? "active":"")">
                    <a class ="page-link" asp-controller="Authors" asp-action="Index" asp-route-pg="@pag"> @pag </a>
                </li>
            }
            @if(pager.CurrentPage < pager.TotalPages)
            {
                <li class="page-item">
                    <a class ="page-link" asp-controller="Authors" asp-action="Index" asp-route-pg="@(pager.CurrentPage+1)"> Next </a>
                </li>
                <li>
                     <a class ="page-link" asp-controller="Authors" asp-action="Index" asp-route-pg=@(pager.CurrentPage -1)>Previous</a>
                </li>
            }

           

            
        </ul>
    }
   <li>
     <a asp-controller="Authors" asp-action="Create" class="btn btn-success" ><i class="bi bi-plus-circle"></i>Add New Author</a>
   </li>

</div>

